---
const packages = [
  {
    name: "Escape Romantico",
    price: "Desde S/ 890",
    includes: ["1 noche en domo premium", "Jacuzzi privado", "Cena de autor para 2"],
    highlighted: false,
  },
  {
    name: "Astro Experience",
    price: "Desde S/ 1,120",
    includes: ["1 noche en domo premium", "Sesion guiada de cielo nocturno", "Kit basico de astrofotografia"],
    highlighted: true,
  },
  {
    name: "Aventura Colca",
    price: "Desde S/ 1,350",
    includes: ["2 noches en domo premium", "Tour panoramico del valle", "Desayuno andino incluido"],
    highlighted: false,
  },
];

const whatsappBase = "https://wa.me/51999999999?text=";
---

<section id="packages" class="mx-auto w-full max-w-6xl scroll-mt-28 px-4 py-16 sm:px-6 md:py-24 lg:px-8">
  <div class="mb-10 text-center">
    <p class="text-xs font-medium uppercase tracking-[0.2em] text-gold sm:text-sm">Paquetes</p>
    <h2 class="mt-3 text-2xl font-semibold text-sillar sm:text-3xl">Experiencias disenadas para cada viaje</h2>
  </div>

  <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
    {
      packages.map((pack) => {
        const message = encodeURIComponent(
          `Hola Colca Star Domes, deseo reservar el paquete "${pack.name}". Por favor compartan disponibilidad.`
        );
        const link = `${whatsappBase}${message}`;
        return (
          <article
            class={`rounded-2xl border p-6 ${
              pack.highlighted
                ? "border-gold bg-gradient-to-b from-gold/10 to-slate-900/80"
                : "border-slate-800 bg-slate-900/60"
            }`}
          >
            <p class="text-xs uppercase tracking-[0.18em] text-gold">Paquete</p>
            <h3 class="mt-3 text-xl font-semibold text-sillar">{pack.name}</h3>
            <p class="mt-2 text-sm text-slate-300">{pack.price}</p>

            <ul class="mt-4 space-y-2 text-sm text-slate-200">
              {pack.includes.map((item) => <li>â€¢ {item}</li>)}
            </ul>

            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="mt-6 inline-flex items-center justify-center rounded-full border border-gold px-4 py-2 text-sm font-medium text-gold transition hover:bg-gold/10"
            >
              Consultar paquete
            </a>
          </article>
        );
      })
    }
  </div>
</section>

